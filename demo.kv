FloatLayout:
    canvas:
        Color:
            rgb:1,1,1
        Rectangle:
            source:'D:\\picture.jpg'
            size: self.size

    BoxLayout:
        padding:10
        spacing:10
        size_hint:1, None
        pos_hint:{'top':1}
        height:55
        Image:
            size_hint: None, None
            size:35,35
            source:'D:\\Python-PNG-Image.png'
        Label:
            height:28
            text_size: self.width, None
            color: (1,1,1,1)
            text:'Gallery App'

<Pictures>:
    on_size: self.center = win.Window.center
    size: image.size
    size_hint: None, None
    Image:
        id: image
        source: root.source
        size: 200, 200 / self.image_ratio
        canvas.before:
            Color:
                rgba: 1,1,1,1
            BorderImage:
                source: 'D:\\bor.jpg'
                border: (6,6,6,6)
                size: (self.width + 12, self.height + 12)
                pos: (-6, -6)

